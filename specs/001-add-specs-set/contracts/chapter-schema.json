{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Chapter",
  "type": "object",
  "required": ["id", "title", "tabs", "metadata"],
  "properties": {
    "id": {"type": "string"},
    "title": {"type": "string"},
    "order": {"type": "integer"},
    "metadata": {
      "type": "object",
      "properties": {
        "word_counts": {"type": "object"}
      }
    },
    "tabs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["role", "learning_objective", "content", "examples"],
        "properties": {
          "role": {"type": "string"},
          "learning_objective": {"type": "string"},
          "content": {"type": "string"},
          "examples": {
            "type": "array",
            "items": {"type": "object", "required": ["title", "description"]}
          }
        }
      },
      "minItems": 5,
      "maxItems": 5
    }
  }
}
